@model AppModel.Models.Depolar
@{
    ViewData["Title"] = "Depo Kaldır";
}
<!DOCTYPE html>
<html>
<body>
    <div class="container">
        <h2 class="page-header text-center">Depo Kaldır</h2>
        <hr />
        <div class="row">
            <div class="col-sm-12 col-sm-offset-2">
                <a asp-action="Index" class="btn btn-warning">Geri Dön</a>
                <table class="table table-bordered table-striped" style="margin-top:20px;">
                    <thead align="center">
                    <th>@Html.DisplayNameFor(model => model.ID)</th>
                    <th>@Html.DisplayNameFor(model => model.ADI)</th>
                    <th>@Html.DisplayNameFor(model => model.ADRES)</th>
                    <th>@Html.DisplayNameFor(model => model.CALISANSAYISI)</th>
                    <th>İŞLEM</th>
                    </thead>
                    <tbody align="center">
                        <tr>
                            <td>@Html.DisplayFor(model => model.ID)</td>
                            <td>@Html.DisplayFor(model => model.ADI)</td>
                            <td>@Html.DisplayFor(model => model.ADRES)</td>
                            <td>@Html.DisplayFor(model => model.CALISANSAYISI)</td>
                            <td>
                                <form asp-action="Delete">
                                    <input type="hidden" asp-for="ID" />
                                    <input type="submit" value="Kaldır" class="btn btn-danger" />
                                </form>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>